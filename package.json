{
    "name": "@muradley/grid-plus",
    "version": "0.1.0",
    "description": "Advanced DataGrid component built with React, TanStack Table, and shadcn/ui",
    "type": "module",
    "main": "./dist/grid-plus.es.js",
    "module": "./dist/grid-plus.es.js",
    "types": "./dist/index.d.ts",
    "typesVersions": {
        "*": {
            "styles.css": []
        }
    },
    "exports": {
        ".": {
            "import": "./dist/grid-plus.es.js",
            "types": "./dist/index.d.ts"
        },
        "./styles.css": "./dist/styles.css"
    },
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:types": "tsc --emitDeclarationOnly",
        "lint": "eslint .",
        "preview": "vite preview",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepublishOnly": "npm run build",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Muradley/grid-plus"
    },
    "homepage": "https://github.com/Muradley/grid-plus#readme",
    "keywords": [
        "react",
        "datagrid",
        "table",
        "tanstack-table",
        "shadcn",
        "typescript",
        "virtualization",
        "server-side",
        "filtering",
        "sorting"
    ],
    "author": "Murad Durrani",
    "license": "MIT",
    "peerDependencies": {
        "@tanstack/react-table": "^8.0.0",
        "@tanstack/react-virtual": "^3.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-slot": "^1.2.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lodash": "^4.17.21",
        "lucide-react": "^0.522.0",
        "tailwind-merge": "^3.3.1",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@storybook/addon-docs": "^9.0.15",
        "@storybook/addon-onboarding": "^9.0.15",
        "@storybook/react-vite": "^9.0.15",
        "@tailwindcss/vite": "^4.1.11",
        "@types/lodash": "^4.17.19",
        "@types/node": "^24.0.3",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "eslint": "^9.25.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "eslint-plugin-storybook": "^9.0.15",
        "globals": "^16.0.0",
        "prettier": "^3.5.3",
        "storybook": "^9.0.15",
        "tailwindcss": "^4.1.10",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.30.1",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4"
    }
}
