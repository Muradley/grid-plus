{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.stories.tsx",
        "src/styles"
    ]
}
